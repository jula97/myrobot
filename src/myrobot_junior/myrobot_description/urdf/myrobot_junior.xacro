<?xml version='1.0'?>

<robot name="myrobot_junior" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find myrobot_description)/urdf/myrobot_junior.gazebo" />
  <xacro:include filename="$(find myrobot_description)/urdf/materials.xacro" />
  
  <link name='base_footprint'>

    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0.1" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" 
          ixy="0" 
          ixz="0"
          iyy="0.1" 
          iyz="0"
          izz="0.1"/>
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0.20" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.291" length="0.5"/>
      </geometry>
    </collision>

    <visual name='base_footprint_visual'>
      <origin xyz="0 0 0.20" rpy=" 0 0 0"/>
      <geometry>
      
        <cylinder radius="0.291" length="0.5"/>
      </geometry>
    </visual>

    <collision name='caster_collision'>
      <origin xyz="-0.15 0 -0.088" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='caster_visual'>
      <origin xyz="-0.15 0 -0.088" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
    </visual>

    <collision name='caster_front_collision'>
      <origin xyz="0.15 0 -0.088" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='caster_front_visual'>
      <origin xyz="0.15 0 -0.088" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.04"/>
      </geometry>
    </visual>

  </link>


  <link name="left_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.13" length="0.04"/>
      </geometry>
    </collision>

    <visual name="left_wheel_visual">
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.13" length="0.04"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <mass value="5"/>
      <inertia
        ixx=".1" ixy="0.0" ixz="0.0"
        iyy=".1" iyz="0.0"
        izz=".1"/>
    </inertial>
  </link>

  <link name="right_wheel">
